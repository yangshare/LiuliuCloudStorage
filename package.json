{
  "name": "liuliu-cloud-storage",
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "electron"
    ]
  },
  "version": "0.1.0",
  "description": "溜溜网盘 - 多租户云存储桌面客户端",
  "main": "dist-electron/main/index.js",
  "author": "yangc",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=22.12.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "chcp 65001 && electron-vite dev",
    "dev:test-update": "cross-env TEST_UPDATE=true electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "package": "electron-builder --win",
    "build:win": "pnpm build && electron-builder --win",
    "build:mac": "pnpm build && electron-builder --mac",
    "build:linux": "pnpm build && electron-builder --linux",
    "migrate:ui": "node scripts/migrate-to-element-plus.js"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "@vicons/ionicons5": "^0.13.0",
    "better-sqlite3": "^11.0.0",
    "electron-updater": "^6.7.3",
    "element-plus": "^2.13.1",
    "lodash-es": "^4.17.22",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.0",
    "@faker-js/faker": "^10.2.0",
    "@pinia/nuxt": "^0.5.0",
    "@playwright/test": "^1.57.0",
    "@types/better-sqlite3": "^7.6.11",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/ui": "^4.0.16",
    "@vue/test-utils": "^2.4.6",
    "axios": "^1.6.0",
    "axios-retry": "^4.5.0",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.30.0",
    "drizzle-orm": "^0.45.1",
    "electron": "^30.0.0",
    "electron-builder": "^26.4.0",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^2.0.0",
    "glob": "^10.5.0",
    "jsdom": "^27.4.0",
    "naive-ui": "^2.43.2",
    "pinia": "^2.1.0",
    "sharp": "^0.34.5",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^4.0.16",
    "vue": "^3.4.0",
    "vue-router": "^4.6.4"
  }
}
